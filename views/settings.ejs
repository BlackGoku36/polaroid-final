<%- include('./partials/boilerplate.ejs') %>
  <%- include('./partials/nav.ejs', {check: check}) %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/settings.css" />
    <title>Settings</title>
    <div class="settings-main">
      <div class="settings-header">
        Account Settings
      </div>
      <div class="main-container">
        <div class="info-container">
          <div class="section-header">Profile</div>
          <label for="username" class="label-input">Username</label>
          <input class="input-field" type="text" value=<%=username %> id="username" autocomplete="off"/>

          <label for="email" class="label-input">Email Address</label>
          <input class="input-field" type="email" value=<%=email %> id="email" disabled />

          <label class="label-input" for="bio">Bio</label>
          <textarea class="input-field-textarea" type="text" id="bio" autocomplete="off"></textarea>

          <div class="section-header">Change password</div>
          <label class="label-input" for="origPs">Original Password</label>
          <input class="input-field"  type="password" id="origPs" autocomplete="off"/>

          <label class="label-input" for="newPs">New password</label>
          <input class="input-field"  type="password" id="newPs" autocomplete="off"/>

          <label class="label-input" for="renewPs">Re-enter new password</label>
          <input class="input-field"  type="password" id="renewPs" autocomplete="off"/>

          <div class="buttons-div">
            <button type="submit" class="btn btn-outline-info" style="width: 100%;">SAVE CHANGES</button>
          </div>
        </div>
      </div>
      <div class="deactive-buttons-div">
        <form action="/user/settings" method="delete" class="deacForm">
          <button class="btn btn-outline-danger" type="submit">DEACTIVATE ACCOUNT</button>
        </form>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
