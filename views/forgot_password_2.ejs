<%- include('./partials/boilerplate.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<link rel="stylesheet" href="/css/login.css">
<div class="div-container">
  <img src="/assets/Logo.jpg" onclick="location.href='/'" class="logo">
  <div class="text-div">
        <form method="post" action="/user/resetpassword" onchange="return emailValidation()">
          <div class="head-div">Change password</div>

          <div class="email-div">
            <label for="email-input" class="email-label" style="opacity: 70%">Re-enter your Email address</label>
            <input onchange="funcChange()" type="text" name="email" class="email-box" placeholder="input@example.com" id="email-input" required autocomplete="off"
              oninvalid="this.setCustomValidity('Email Address can not be empty')"
              oninput="this.setCustomValidity('')">
          </div>

          <div class="email-div">
            <label for="name-input" class="email-label" style="opacity: 70%">OTP</label>
            <input type="username" name="otp" class="email-box" id="name-input" required autocomplete="off"
              oninvalid="this.setCustomValidity('OTP can not be empty')"
              oninput="this.setCustomValidity('')">
          </div>

          <div class="pass-div">
            <label for="password-input" class="password-label" style="opacity: 70%">Password</label>
            <input type="password" name="password" class="password-box" placeholder="Password" id="password-input" required autocomplete="off"
              oninvalid="this.setCustomValidity('Password can not be empty')"
              oninput="this.setCustomValidity('')">
          </div>

          <div class="pass-div">
            <label for="repassword-input" class="password-label" style="opacity: 70%">Enter the password again</label>
            <input type="password" name="re-password" class="password-box" placeholder="Password" id="repassword-input" required autocomplete="off">
          </div>

          <button type="submit" class="btn btn-outline-info" style="width: 100%" id="submit-button">Submit</button>
        </form>
        <p style="color: red;"> <%= error %> </p>
      </div>
      <div class="img-div"></div>
    </div>
  </body>
  <script src="/scripts/login.js"></script>
</html>
